@model MvcPostGres.Models.Departamento

<div class="card shadow-sm border-danger mb-4">
    <div class="card-header bg-danger text-white">
        <h2 class="my-2"><i class="bi bi-trash"></i> Eliminar Departamento</h2>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> ¿Está seguro de que desea eliminar este departamento?
        </div>
        
        <div class="row">
            <div class="col-md-4 fw-bold">Id:</div>
            <div class="col-md-8 mb-2">@Model.Id</div>
            
            <div class="col-md-4 fw-bold">Nombre:</div>
            <div class="col-md-8 mb-2">@Model.Nombre</div>
            
            <div class="col-md-4 fw-bold">Localidad:</div>
            <div class="col-md-8 mb-2">@Model.Localidad</div>
        </div>

        <hr class="my-4" />
        
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</div>